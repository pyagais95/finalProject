<%- include('./header.ejs', {path: '../'}); %>


<div class="main-container">
    <section class="space--sm">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="masonry">
                        <div class="row">
                            <div class="masonry__container">
                                <% for(var i = 0; i < books.length; i++) { %>
                                    <% var id = i %>
                                    <div class="masonry__item col-sm-6 col-md-3" data-masonry-filter="Creative">
                                        <div class="product">
                                            <a href="books/<%= books[i].id %>">
                                                <img alt="Image" src="img/<%= books[i].image %>" />
                                            </a>
                                            <a class="block" href="#">
                                                <div>
                                                    <p><h5><%= books[i].title + id%></h5></p>
                                                    <p><span><%= books[i].author %></span></p> 
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <!--end item-->
                                <% } %>

                            </div>
                            <!--end masonry container-->
                        </div>
                        <!--end of row-->
                    </div>
                    <!--end masonry-->
                </div>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
<%- include('./footer.ejs', {path: '../'}); %>
